{
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.enable": true,
  "prettier.disableLanguages": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact"
  ],
  "npm.packageManager": "yarn",
  "typescript.tsdk": "node_modules/typescript/lib"
}
